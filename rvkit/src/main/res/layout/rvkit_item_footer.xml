<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_footer_height"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/comm_error_net"
        android:textColor="@color/item_footer_bg"
        android:textSize="@dimen/item_footer_txt_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/item_more_loading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_footer_height"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/comm_loading"
            android:textColor="@color/item_footer_bg"
            android:textSize="@dimen/item_footer_txt_size" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_more_no"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_footer_height"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="@string/comm_no_have_more"
        android:textColor="@color/item_footer_bg"
        android:textSize="@dimen/item_footer_txt_size"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_empty_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/item_footer_bg"
        android:text="@string/comm_empty"
        android:visibility="gone" />


</FrameLayout>